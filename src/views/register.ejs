<!doctype html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <title>TechKit - Register</title>
    </head>

    <body>
        <!-- Header -->
        <%- include('./partials/header'); %>

        <!-- Register -->
        <section id="register-login-page" class="bg-white py-5">
            <div class="container mx-auto px-4">
                <div class="flex flex-col md:flex-row gap-4 justify-center">
                    <div
                        class="md:w-1/2 bg-white rounded-lg shadow-md p-4 md:p-10 md:m-10"
                    >
                        <h2 class="text-2xl font-semibold mb-10">Register</h2>
                        <form action="/auth/register" method="post">
                            <div class="mb-3">
                                <label for="register-email" class="block mb-2">Email</label>
                                <input
                                    type="email"
                                    id="register-email"
                                    name="email"
                                    class="w-full px-3 py-1 border focus:border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="register-password" class="block mb-2">Password</label>
                                <input
                                    type="password"
                                    id="register-password"
                                    name="password"
                                    class="w-full px-3 py-1 border focus:border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="register-confirm-password" class="block mb-2">Confirm Password</label>
                                <input
                                    type="password"
                                    id="register-confirm-password"
                                    name="confirmPassword"
                                    class="w-full px-3 py-1 border focus:border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <button
                                type="submit"
                                class="mt-10 bg-primary text-white border border-primary hover:bg-transparent hover:text-primary py-2 px-3 rounded-full w-full"
                            >
                                Register
                            </button>
                        </form>
                        <% if (typeof message !== 'undefined') { %>
                            <div class="mt-4 p-4 mb-4 text-sm text-primary rounded-lg bg-gray-txt" role="alert">
                                <span class="font-medium"><%= message %></span>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('./partials/footer'); %>
    </body>
</html>