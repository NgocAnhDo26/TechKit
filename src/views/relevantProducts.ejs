<section id="relevant-products">
  <div class="swiper container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-8"><%=title%></h2>
    <div class="flex flex-wrap -mx-4 items-stretch">
      <% products.forEach(product => { %>
      <div class="w-full sm:w-1/2 lg:w-1/4 px-4 mb-8 flex flex-col">
        <%- include('product', { product }); %>
      </div>
      <% }); %>
      <% if (products.length === 0) { %>
        <p class="text-center my-10">Không tìm thấy sản phẩm phù hợp.</p>
      <% } %>
    </div>
  </div>
</section>
