<!doctype html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <title>TechKit - Shopping Cart</title>
    </head>

    <body>
        <!-- Header -->
        <%- include('./partials/header'); %>

        <!-- Cart -->
        <section id="cart-page" class="bg-white py-16">
            <div class="container mx-auto px-4">
                <h1 class="mb-4 text-2xl font-semibold">Shopping Cart</h1>
                <div class="flex flex-col gap-4 md:flex-row">
                    <div class="md:w-3/4">
                        <div class="mb-4 rounded-lg bg-white p-6 shadow-md">
                            <div class="overflow-x-auto">
                                <table class="w-full">
                                    <thead>
                                        <tr>
                                            <th
                                                class="text-center font-semibold md:text-left"
                                            >
                                                Product
                                            </th>
                                            <th
                                                class="text-center font-semibold"
                                            >
                                                Price
                                            </th>
                                            <th
                                                class="text-center font-semibold"
                                            >
                                                Quantity
                                            </th>
                                            <th
                                                class="text-center font-semibold md:text-right"
                                            >
                                                Total
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="cart-items">
                                        <tr
                                            class="border-b border-gray-line pb-4"
                                        >
                                            <td class="px-1 py-4">
                                                <div
                                                    class="flex flex-col items-center text-center sm:flex-row sm:text-left"
                                                >
                                                    <img
                                                        class="mb-4 h-16 w-16 sm:mb-0 sm:mr-8 md:h-24 md:w-24"
                                                        src=""
                                                        alt="Product image"
                                                    />
                                                    <p
                                                        class="text-sm md:text-base md:font-semibold"
                                                    >
                                                        Summer black dress
                                                    </p>
                                                </div>
                                            </td>
                                            <td class="px-1 py-4 text-center">
                                                $19.99
                                            </td>
                                            <td class="px-1 py-4 text-center">
                                                <div
                                                    class="flex items-center justify-center"
                                                >
                                                    <button
                                                        class="cart-decrement flex h-10 w-10 items-center justify-center rounded-full border border-primary bg-primary text-white hover:bg-transparent hover:text-primary"
                                                    >
                                                        -
                                                    </button>
                                                    <p
                                                        class="quantity w-8 text-center"
                                                    >
                                                        1
                                                    </p>
                                                    <button
                                                        class="cart-increment flex h-10 w-10 items-center justify-center rounded-full border border-primary bg-primary text-white hover:bg-transparent hover:text-primary"
                                                    >
                                                        +
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="px-1 py-4 text-right">
                                                $19.99
                                            </td>
                                        </tr>
                                        <tr class="pb-4">
                                            <td class="px-1 py-4">
                                                <div
                                                    class="flex flex-col items-center text-center sm:flex-row sm:text-left"
                                                >
                                                    <img
                                                        class="mb-4 h-16 w-16 sm:mb-0 sm:mr-8 md:h-24 md:w-24"
                                                        src=""
                                                        alt="Product image"
                                                    />
                                                    <p
                                                        class="text-sm md:text-base md:font-semibold"
                                                    >
                                                        Black suit
                                                    </p>
                                                </div>
                                            </td>
                                            <td class="px-1 py-4 text-center">
                                                $19.99
                                            </td>
                                            <td class="px-1 py-4 text-center">
                                                <div
                                                    class="flex items-center justify-center"
                                                >
                                                    <button
                                                        class="cart-decrement flex h-10 w-10 items-center justify-center rounded-full border border-primary bg-primary text-white hover:bg-transparent hover:text-primary"
                                                    >
                                                        -
                                                    </button>
                                                    <p
                                                        class="quantity w-8 text-center"
                                                    >
                                                        1
                                                    </p>
                                                    <button
                                                        class="cart-increment flex h-10 w-10 items-center justify-center rounded-full border border-primary bg-primary text-white hover:bg-transparent hover:text-primary"
                                                    >
                                                        +
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="px-1 py-4 text-right">
                                                $19.99
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div
                                    class="mt-10 flex flex-col items-center justify-between px-1 lg:flex-row"
                                >
                                    <div class="flex items-center">
                                        <input
                                            type="text"
                                            placeholder="Coupon code"
                                            class="border-gray-300 rounded-l-full border px-4 py-2 focus:outline-none"
                                        />
                                        <button
                                            class="rounded-r-full border border-primary bg-primary px-4 py-2 text-white hover:bg-transparent hover:text-primary"
                                        >
                                            Apply Coupon
                                        </button>
                                    </div>
                                    <div class="mt-4 flex space-x-2 lg:mt-0">
                                        <button
                                            class="rounded-full border border-primary bg-primary px-4 py-2 text-white hover:bg-transparent hover:text-primary"
                                        >
                                            Empty Cart
                                        </button>
                                        <button
                                            class="rounded-full border border-primary bg-primary px-4 py-2 text-white hover:bg-transparent hover:text-primary"
                                        >
                                            Update Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="md:w-1/4">
                        <div class="rounded-lg bg-white p-6 shadow-md">
                            <h2 class="mb-4 text-lg font-semibold">Summary</h2>
                            <div class="mb-4 flex justify-between">
                                <p>Subtotal</p>
                                <p>$19.99</p>
                            </div>
                            <div class="mb-4 flex justify-between">
                                <p>Taxes</p>
                                <p>$1.99</p>
                            </div>
                            <div
                                class="mb-4 flex justify-between border-b border-gray-line pb-4"
                            >
                                <p>Shipping</p>
                                <p>$0.00</p>
                            </div>
                            <div class="mb-2 flex justify-between">
                                <p class="font-semibold">Total</p>
                                <p class="font-semibold">$21.98</p>
                            </div>
                            <a
                                href="/checkout"
                                class="mt-4 block w-full rounded-full border bg-primary px-4 py-2 text-center text-white hover:border-primary hover:bg-transparent hover:text-primary"
                                >Proceed to checkout</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('./partials/footer'); %>
    </body>
</html>
