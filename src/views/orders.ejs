<div class="flex-1 flex flex-col shadow-md rounded-md p-5 text-md pt-10">
  <h2 class="font-bold text-xl">Đơn hàng của tôi</h2>

  <table
    class="w-full mt-5 rounded-lg border-separate border-tools-table-outline border-2 border-gray-line text-center font-manrope p-2"
  >
    <thead>
      <tr>
        <th class="p-2">Mã đơn hàng</th>
        <th class="p-2">Ngày đặt hàng</th>
        <th class="p-2">Giá trị đơn hàng</th>
        <th class="p-2">Trạng thái</th>
        <th class="p-2">Chi tiết</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
      <tr>
        <td class="p-2"><%= order.id %></td>
        <td class="p-2"><%= order.create_time.toLocaleDateString() %></td>
        <td class="p-2">
          <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency:
          'VND',}).format(order.total_price) %>
        </td>
        <td class="p-2"><%= orderStatusText[order.status] %></td>
        <td class="p-2 text-primary">
          <a href="/order/<%= order.id %>">Xem chi tiết</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
