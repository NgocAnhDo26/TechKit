<!doctype html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <title>TechKit - Login</title>
    </head>

    <body>
        <!-- Header -->
        <%- include('./partials/header'); %>

        <!-- Login -->
        <section id="register-login-page" class="bg-white py-5">
            <div class="container mx-auto px-4">
                <div class="flex flex-col justify-center gap-4 md:flex-row">
                    <div
                        class="rounded-lg bg-white p-4 shadow-md md:m-10 md:w-1/2 md:p-10"
                    >
                        <h2 class="mb-10 text-2xl font-semibold">Login</h2>
                        <form action="/auth/login" method="post">
                            <div class="mb-3">
                                <label for="login-email" class="mb-2 block"
                                    >Email</label
                                >
                                <input
                                    type="email"
                                    id="login-email"
                                    class="w-full rounded-full border px-3 py-1 focus:border-transparent focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="login-password" class="mb-2 block"
                                    >Password</label
                                >
                                <input
                                    type="password"
                                    id="login-password"
                                    class="w-full rounded-full border px-3 py-1 focus:border-transparent focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="my-5 flex flex-row">
                                <div class="grow">
                                    <a
                                        href="#"
                                        class="text-primary hover:underline"
                                        >Forgot Password?</a
                                    >
                                </div>

                                <div class="flex grow justify-end">
                                    <a
                                        href="/auth/register"
                                        class="text-primary hover:underline"
                                        >Don't have an account?</a
                                    >
                                </div>
                            </div>

                            <button
                                type="submit"
                                class="mt-5 w-full rounded-full border border-primary bg-primary px-3 py-2 text-white hover:bg-transparent hover:text-primary"
                            >
                                Login
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('./partials/footer'); %>
    </body>
</html>
