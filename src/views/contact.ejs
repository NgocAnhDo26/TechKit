<!doctype html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <title>TechKit - Contact</title>
    </head>

    <body>
        <!-- Header -->
        <%- include('./partials/header'); %>

        <!--Content-->
        <section class="bg-white py-16">
            <div class="container mx-auto px-4">
                <div class="flex flex-col gap-4 md:flex-row">
                    <div
                        class="rounded-lg bg-white p-6 shadow-md md:m-10 md:w-1/2 md:p-10"
                    >
                        <h2 class="mb-4 text-center text-4xl font-semibold">
                            Contact Us
                        </h2>
                        <div
                            class="mx-auto mb-10 h-2 w-1/4 content-center bg-black"
                        ></div>

                        <p class="mt-3 text-justify">
                            <span class="font-semibold">Address: </span>
                            123 Nguyen Van Cu, District 5, HCM
                        </p>

                        <div class="mb-5 mt-3 grid grid-cols-8 items-center">
                            <p class="col-span-3 self-start font-semibold">
                                Our Social Media :
                            </p>
                            <a href="#">
                                <img
                                    class="link-img h-5 w-5 gap-0"
                                    src="/images/social_icons/facebook.svg"
                                />
                            </a>
                            <a href="#">
                                <img
                                    class="link-img h-5 w-5 gap-0"
                                    src="/images/social_icons/instagram.svg"
                                />
                            </a>
                            <a href="#">
                                <img
                                    class="link-img h-5 w-5 gap-0"
                                    src="/images/social_icons/twitter.svg"
                                />
                            </a>
                            <a href="#">
                                <img
                                    class="link-img h-5 w-5 gap-0"
                                    src="/images/social_icons/pinterest.svg"
                                />
                            </a>
                        </div>
                        <img
                            class="mx-auto w-2/3 rounded-xl shadow-lg"
                            src="/images/location/location.jpg"
                        />
                    </div>
                    <div
                        class="rounded-lg bg-white p-6 shadow-md md:m-10 md:w-1/2 md:p-10"
                    >
                        <h2 class="mb-4 text-2xl font-semibold">
                            Your contact information
                        </h2>
                        <form>
                            <div class="mb-3">
                                <label for="messsager-email" class="block"
                                    >Your name</label
                                >
                                <input
                                    type="email"
                                    id="register-email"
                                    class="focus:boFrder-transparent w-full rounded-full border px-3 py-1 focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="messager_name" class="block"
                                    >Email</label
                                >
                                <input
                                    type="text"
                                    class="w-full rounded-full border px-3 py-1 focus:border-transparent focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="message" class="block"
                                    >Message</label
                                >
                                <textarea
                                    id="message"
                                    rows="5"
                                    class="h-32 w-full rounded-lg border px-3 py-1 focus:border-transparent focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                ></textarea>
                            </div>
                            <button
                                type="submit"
                                class="w-full rounded-full border border-primary bg-primary px-3 py-2 text-white hover:bg-transparent hover:text-primary"
                            >
                                Send
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('./partials/footer'); %>
    </body>
</html>
