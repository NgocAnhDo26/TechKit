<!doctype html>
<html lang="vi">
    <head>
        <%- include('./partials/head'); %>
        <title>TechKit - Contact</title>
    </head>

    <body>
        <!-- Header -->
        <%- include('./partials/header'); %>

        <!--Content-->
        <section class="bg-white py-16">
            <div class="container mx-auto px-4">
                <div class="flex flex-col md:flex-row gap-4">
                    <div
                        class="md:w-1/2 bg-white rounded-lg shadow-md p-6 md:p-10 md:m-10"
                    >
                        <h2 class="text-4xl font-semibold mb-4 text-center">
                            Contact Us
                        </h2>
                        <div
                            class="bg-black mx-auto h-2 w-1/4 content-center mb-10"
                        >
                        <p class="mt-3 text-justify">
                            <span class="font-semibold">Address: </span>
                            123 Nguyen Van Cu, District 5, HCM
                        </p>
                        <p class="mt-3 text-justify">
                            <span class="font-semibold">Email: </span>
                            techkit@example.com
                        </p>
                        <p class="mt-3 text-justify">
                            <span class="font-semibold">Hotline: </span>
                            1900.1004
                        </p>
                        <div class="mt-3 grid grid-cols-8 items-center mb-5">
                            <p class="col-span-3 font-semibold self-start">
                                Our Social Media :
                            </p>
                            <a href="#">
                                <img
                                    class="link-img w-5 h-5 gap-0"
                                    src="images\social_icons\facebook.svg"
                                />
                            </a>
                            <a href="#">
                                <img
                                    class="link-img w-5 h-5 gap-0"
                                    src="images\social_icons\instagram.svg"
                                />
                            </a>
                            <a href="#">
                                <img
                                    class="link-img w-5 h-5 gap-0"
                                    src="images\social_icons\twitter.svg"
                                />
                            </a>
                            <a href="#">
                                <img
                                    class="link-img w-5 h-5 gap-0"
                                    src="images\social_icons\pinterest.svg"
                                />
                            </a>
                        </div>
                        <img
                            class="w-2/3 mx-auto rounded-xl shadow-lg"
                            src="images\location\location.jpg"
                        />
                    </div>
                    <div
                        class="md:w-1/2 bg-white rounded-lg shadow-md p-6 md:p-10 md:m-10"
                    >
                        <h2 class="text-2xl font-semibold mb-4">
                            Your contact information
                        </h2>
                        <form>
                            <div class="mb-3">
                                <label for="messsager-email" class="block"
                                    >Your name</label
                                >
                                <input
                                    type="email"
                                    id="register-email"
                                    class="w-full px-3 py-1 border focus:boFrder-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="messager_name" class="block"
                                    >Email</label
                                >
                                <input
                                    type="text"
                                    class="w-full px-3 py-1 border focus:border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="message" class="block"
                                    >Message</label
                                >
                                <textarea
                                    id="message"
                                    rows="5"
                                    class="w-full px-3 py-1 border focus:border-transparent rounded-lg focus:outline-none focus:ring-2 focus:ring-primary h-32"
                                    required
                                ></textarea>
                            </div>
                            <button
                                type="submit"
                                class="bg-primary text-white border border-primary hover:bg-transparent hover:text-primary py-2 px-3 rounded-full w-full"
                            >
                                Send
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('./partials/footer'); %>
    </body>
</html>
